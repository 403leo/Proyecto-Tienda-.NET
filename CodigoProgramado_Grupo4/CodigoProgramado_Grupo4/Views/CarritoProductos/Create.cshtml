@model CodigoProgramado_Grupo4.Models.CarritoProducto

@{
    ViewBag.Title = "Agregar Producto al Carrito";
}

<h2>Agregar Producto al Carrito</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Carrito</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <!-- Selección de Producto -->
        <div class="form-group">
            @Html.LabelFor(model => model.Productos, "Producto", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ProductoId", ViewBag.Productos as SelectList, "Seleccione un producto", new { @class = "form-control" })
                @Html.ValidationMessage("ProductoId", "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Cantidad -->
        <div class="form-group">
            @Html.LabelFor(model => model.Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Selección de Carrito -->
        <div class="form-group">
            @Html.LabelFor(model => model.CarritoId, "Carrito", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("CarritoId", ViewBag.Carritos as SelectList, "Seleccione un carrito", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CarritoId, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Botón de Envío -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Agregar al Carrito" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver al Listado", "Index", null, new { @class = "btn btn-link" })
</div>
