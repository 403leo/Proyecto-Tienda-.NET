<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title | Bazar en Linea</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

    <style>
        .navbar-nav .nav-link {
            border: 1px solid #00875e;
            margin: 2px;
            transition: background-color 0.3s;
        }

            .navbar-nav .nav-link:hover {
                background-color: #00875e;
            }

        .navbar-brand {
            display: flex;
            align-items: center;
        }

            .navbar-brand img {
                margin-right: 8px;
            }
    </style>

</head>




<body>
    <main>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark" style="background-color: #04394e;">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home", new { area = "" })">
                    <img src="/Images/Imagen Logo.jpg" alt="Book Icon" width="30" height="30">
                    Bazar
                </a>
                <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" title="Toggle navigation" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between" id="navbarSupportedContent">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a href="@Url.Action("Contact", "Home")" class="nav-link">
                                <i class="fas fa-comments nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Login", "Account")" class="nav-link">
                                <i class="fas fa-sign-in-alt  nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Usuarios")" class="nav-link">
                                <i class="fas fa-users  nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Productos")" class="nav-link">
                                <i class="fas fa-box nav-icon nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "CarritoProductos")" class="nav-link">
                                <i class="fas fa-shopping-cart  nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "CodigoDescuentoes")" class="nav-link">
                                <i class="fas fa-tags  nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "ListaDeseos")" class="nav-link">
                                <i class="fas fa-heart nav-icon"></i>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Suscripcion")" class="nav-link">
                                <i class="fas fa-bell  nav-icon"></i>
                            </a>
                        
                        </li>
                    </ul>
                </div>

        </nav>
    </main>
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer class="text-center py-3 d-flex justify-content-center align-items-center"
                    style="background-color: #04394e; color: white; position: relative; bottom: 0; width: 100%;">
                <div class="container">
                    <div class="d-flex justify-content-center align-items-center">
                        <p class="mb-0 me-2">&copy; @DateTime.Now.Year | Bazar en Linea | </p>
                        <a href="@Url.Action("Contact", "Home")" target="_blank" style="color: #00875e; text-decoration: none;">Contacto</a>
                    </div>
                </div>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
