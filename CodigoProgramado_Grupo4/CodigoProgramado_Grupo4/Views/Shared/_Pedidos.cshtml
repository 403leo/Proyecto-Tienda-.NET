
@model IEnumerable<CodigoProgramado_Grupo4.Models.Pedido>

<p>
    <a href="@Url.Action("Create", "Pedidos", new { usuarioId = ViewBag.UsuarioId})" class="btn btn-success">
        Agregar Pedido
    </a>
</p>


@if (Model == null || !Model.Any()) { 
    <p>No hay pedidos disponibles</p>
}
else { 
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Fecha</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var pedido in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => pedido.fecha)</td>
                        <td>@Html.DisplayFor(modelItem => pedido.estado)</td>
                        <td>
                            <a href="@Url.Action("Edit", "Pedido", new { id = pedido.Id })" class="btn btn-primary">Editar</a>
                            <a href="@Url.Action("Details", "Pedido", new { id = pedido.Id })" class="btn btn-info">Detalles</a>
                            <a href="@Url.Action("Delete", "Pedido", new { id = pedido.Id })" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }

        </tbody>
    </table>
}

